<!doctype html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit">
    </head>
    <body>
        <form method="POST" action="/">
            <label>Name</label>
            <input type="text">
            <label>Message</label>
            <input type="text">
            <input type="submit">
        </form>

        <% if (!messages.length) { %>
            <p>There is no messages</p>
        <% } %>
        
        <% for (let message of messages) { %>
            <p><%= message.fullName %> - <%= message.text %></p>
        <% } %>
    </body>
</html>