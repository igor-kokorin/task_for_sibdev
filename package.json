{
  "name": "task_for_sibdev",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "copyNonJsFiles":  {
      "patterns": [ ".env", "web/views/*" ],
      "extensions": [ "ejs" ]
    }
  },
  "scripts": {
    "preinstall": "rimraf prod",
    "install": "tsc",
    "postinstall": "npm run copyNonJsFiles",
    "copyNonJsFiles": "copyfiles .env web/views/*.ejs prod",

    "pretypescript:dev": "npm run install",
    "typescript:dev": "run-p typescriptInWatch NonJsWatch",
    "typescriptInWatch": "tsc -w",
    "NonJsWatch": "npm-watch copyNonJsFiles"
  },
  "author": "Igor Kokorin",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.5.2",
    "bootstrap": "^4.1.3",
    "dotenv": "^6.0.0",
    "ejs": "^2.6.1",
    "hapi": "^17.6.0",
    "pg": "^7.4.3",
    "sequelize": "^4.39.0",
    "vision": "^5.4.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/ejs": "^2.6.0",
    "@types/hapi": "^17.0.19",
    "@types/sequelize": "^4.27.26",
    "@types/vision": "^5.3.4",
    "copyfiles": "^2.1.0",
    "sequelize-cli": "^4.1.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  }
}
